#!/bin/bash
# Outputs a list of the yum packages needed for ruby and cucumber.
# ----------------------------------------------------------------
system_packages="gcc gcc-c++ freeimage-devel readline-devel libstdc++-devel"
ruby_packages="ruby ruby-devel rubygems"
cucumber_packages="libxml2 libxml2-devel libxslt libxslt-devel xorg-x11-server-Xvfb firefox ImageMagick"
echo "$system_packages $ruby_packages $cucumber_packages"

